          if (position === "hidden") return null

          return (
            <div
              key={course.id}
              className={`absolute transition-all duration-700 ease-out transform ${
                position === "center"
                  ? "z-20 scale-110 opacity-100 translate-x-0"
                  : position === "side"
                    ? isLeft
                      ? "z-10 scale-85 opacity-50 -translate-x-80"
